<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#0D0D0D">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="32dp"
        app:cardBackgroundColor="#FF1E1E1E">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="858dp"
            android:orientation="vertical"
            android:padding="35dp">

            <!-- Title -->
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:gravity="center"
                android:letterSpacing="0.05"
                android:text="Generate Payroll"
                android:textColor="#FFFFFFFF"
                android:textSize="28sp"
                android:textStyle="bold" />

            <!-- Select Employee -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Select Employee"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinner_employee"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginBottom="16dp"
                android:background="#FF2C2C2C"
                android:padding="12dp"
                android:textColor="@android:color/holo_green_dark" />

            <!-- Select Month -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Select Month and Year"
                android:textColor="#FFFFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editText_month_year"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginBottom="16dp"
                android:background="#FF2C2C2C"
                android:clickable="true"
                android:focusable="false"
                android:hint="e.g. June 2025"
                android:inputType="none"
                android:padding="12dp"
                android:textColor="#FFFFFFFF"
                android:textColorHint="#FF757575" />

            <!-- Input Fields -->
            <EditText
                android:id="@+id/editText_basic_salary"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginBottom="12dp"
                android:background="#FF2C2C2C"
                android:hint="Basic Salary (₹)"
                android:inputType="numberDecimal"
                android:padding="12dp"
                android:textColor="#FFFFFFFF"
                android:textColorHint="#FF757575" />

            <EditText
                android:id="@+id/editText_allowance"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginBottom="12dp"
                android:background="#FF2C2C2C"
                android:hint="Allowance (₹)"
                android:inputType="numberDecimal"
                android:padding="12dp"
                android:textColor="#FFFFFFFF"
                android:textColorHint="#FF757575" />

            <EditText
                android:id="@+id/editText_deduction"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginBottom="12dp"
                android:background="#FF2C2C2C"
                android:hint="Deductions (₹)"
                android:inputType="numberDecimal"
                android:padding="12dp"
                android:textColor="#FFFFFFFF"
                android:textColorHint="#FF757575" />

            <EditText
                android:id="@+id/editText_bonus"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginBottom="20dp"
                android:background="#FF2C2C2C"
                android:hint="Bonus (₹)"
                android:inputType="numberDecimal"
                android:padding="12dp"
                android:textColor="#FFFFFFFF"
                android:textColorHint="#FF757575" />

            <!-- New Fields: Days Present and Total Working Days -->
            <EditText
                android:id="@+id/editText_days_present"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginBottom="12dp"
                android:background="#FF2C2C2C"
                android:hint="Days Present"
                android:inputType="number"
                android:padding="12dp"
                android:textColor="#FFFFFFFF"
                android:textColorHint="#FF757575" />

            <EditText
                android:id="@+id/editText_total_working_days"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginBottom="20dp"
                android:background="#FF2C2C2C"
                android:hint="Total Working Days"
                android:inputType="number"
                android:padding="12dp"
                android:textColor="#FFFFFFFF"
                android:textColorHint="#FF757575" />

            <!-- Attendance Display -->
            <TextView
                android:id="@+id/text_total_days"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Total Working Days: -"
                android:textColor="#FFFFFFFF"
                android:textSize="16sp" />

            <!-- Net Salary -->
            <TextView
                android:id="@+id/text_net_salary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="Net Pay: ₹ -"
                android:textColor="#FF4CAF50"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Generate Button -->
            <Button
                android:id="@+id/btn_generate_payroll"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="#FF3F51B5"
                android:letterSpacing="0.1"
                android:padding="12dp"
                android:text="Generate Payroll"
                android:textAllCaps="false"
                android:textColor="#FFFFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="100dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</ScrollView>