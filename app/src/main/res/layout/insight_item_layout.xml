<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    android:backgroundTint="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_insight_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_lightbulb"
            android:tint="@color/info_color" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_insight_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Great job! You've maintained 100% attendance this week."
                android:textSize="15sp"
                android:textColor="@color/text_primary2"
                android:maxLines="3"
                android:ellipsize="end"
                android:lineSpacingExtra="2dp"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:id="@+id/tv_insight_subtext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Consistency helps build a strong impression."
                android:textSize="12sp"
                android:textColor="@color/text_secondary2"
                android:layout_marginTop="2dp"
                android:visibility="gone"
                android:fontFamily="sans-serif" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
