<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light2"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header Section with Enhanced Styling -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="28dp"
            android:elevation="8dp"
            app:cardCornerRadius="16dp"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="@color/primary_color2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- Profile Picture with Enhanced Design -->
                    <FrameLayout
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginEnd="16dp">

                        <ImageView
                            android:id="@+id/iv_employee_avatar"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/ic_person"
                            android:background="@drawable/circle_background"
                            android:backgroundTint="@color/white2"
                            android:scaleType="centerCrop"
                            android:clipToOutline="true"
                            android:outlineProvider="background"
                            android:elevation="4dp"
                            android:padding="4dp"
                            android:contentDescription="@string/employee_avatar" />

                        <!-- Status indicator -->
                        <View
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_gravity="bottom|end"
                            android:layout_marginEnd="2dp"
                            android:layout_marginBottom="2dp"
                            android:background="@drawable/circle_background"
                            android:backgroundTint="@color/success_color2"
                            android:elevation="6dp" />
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_employee_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/employee_name_placeholder"
                            android:textColor="@color/white2"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium" />


                        <TextView
                            android:id="@+id/tv_designation_department"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/designation_department_placeholder"
                            android:textColor="@color/white_80"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_report_period"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/report_period_placeholder"
                    android:textColor="@color/white2"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginTop="20dp"
                    android:drawableStart="@drawable/ic_calendar"
                    android:drawablePadding="12dp"
                    android:gravity="center_vertical" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- KPI Summary Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/kpi_summary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary2"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

        <!-- FIXED KPI CARDS SECTION -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="28dp"
            android:paddingHorizontal="4dp"
            android:baselineAligned="false">

            <!-- Attendance Percentage Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="2dp"
                app:cardElevation="6dp"
                app:cardCornerRadius="12dp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="@color/white2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/circle_background"
                        android:backgroundTint="@color/success_color_light"
                        android:gravity="center"
                        android:layout_marginBottom="12dp">

                        <ProgressBar
                            android:id="@+id/pb_attendance"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:indeterminate="false"
                            android:max="100"
                            android:progress="85"
                            android:progressDrawable="@drawable/circular_progress_attendance"
                            android:contentDescription="@string/attendance_progress" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_attendance_percentage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/attendance_percentage_placeholder"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/success_color2"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/attendance"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary2"
                        android:fontFamily="sans-serif" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Average Work Hours Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                app:cardElevation="6dp"
                app:cardCornerRadius="12dp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="@color/white2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/circle_background"
                        android:backgroundTint="@color/primary_blue_light"
                        android:gravity="center"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_time"
                            app:tint="@color/primary_blue"
                            android:contentDescription="@string/avg_hours" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_avg_work_hours"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/avg_work_hours_placeholder"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_blue"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/avg_hours"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary2"
                        android:fontFamily="sans-serif" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Leaves Taken Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="2dp"
                app:cardElevation="6dp"
                app:cardCornerRadius="12dp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="@color/white2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:orientation="vertical"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/circle_background"
                        android:backgroundTint="@color/warning_color_light"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:contentDescription="@string/leaves_taken"
                            android:src="@drawable/ic_beach"
                            app:tint="@color/warning_color" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_leaves_taken"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/leaves_taken_placeholder"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/warning_color"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="0dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:text="@string/leaves_taken"
                        android:textColor="@color/text_secondary2"
                        android:textSize="12sp" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>


        <!-- Visual Reports Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/visual_reports"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary2"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

        <!-- Monthly Attendance Trend Chart -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="28dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="16dp"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="@color/white2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="28dp">

                <!-- Card Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp"
                    android:gravity="center_vertical">

                    <View
                        android:layout_width="4dp"
                        android:layout_height="28dp"
                        android:background="@color/primary_blue"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/monthly_attendance_trend"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary2"
                        android:fontFamily="sans-serif-medium" />

                </LinearLayout>

                <!-- Chart Container -->
                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/bar_chart_work_hours"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@drawable/ripple_background"
                    android:padding="16dp"
                    android:contentDescription="@string/work_hours_chart" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Login-Logout Pattern Chart -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="28dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="16dp"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="@color/white2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="28dp">

                <!-- Card Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp"
                    android:gravity="center_vertical">

                    <View
                        android:layout_width="4dp"
                        android:layout_height="28dp"
                        android:background="@color/primary_blue"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/login_logout_pattern"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary2"
                        android:fontFamily="sans-serif-medium" />

                </LinearLayout>

                <!-- Chart Container -->
                <com.github.mikephil.charting.charts.ScatterChart
                    android:id="@+id/scatter_chart_login_logout"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@drawable/ripple_background"
                    android:padding="16dp"
                    android:contentDescription="@string/time_pattern_chart" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Calendar View -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="28dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="16dp"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="@color/white2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="28dp">

                <!-- Card Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp"
                    android:gravity="center_vertical">

                    <View
                        android:layout_width="4dp"
                        android:layout_height="28dp"
                        android:background="@color/primary_blue"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/calendar_view"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary2"
                        android:fontFamily="sans-serif-medium" />

                </LinearLayout>

                <!-- Calendar Legend -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/ripple_background"
                    android:padding="16dp"
                    android:layout_marginBottom="20dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <View
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:background="@drawable/circle_background_success"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/present"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary2"
                            android:fontFamily="sans-serif" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <View
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:background="@drawable/circle_background_error"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/absent"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary2"
                            android:fontFamily="sans-serif" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <View
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:background="@drawable/circle_background_warning"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/leave"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary2"
                            android:fontFamily="sans-serif" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Calendar Widget -->
                <com.prolificinteractive.materialcalendarview.MaterialCalendarView
                    android:id="@+id/cv_attendance_calendar"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    app:mcv_showOtherDates="all"
                    app:mcv_selectionColor="@color/primary_blue"
                    app:mcv_tileSize="44dp"/>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Smart Insights Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="28dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="16dp"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="@color/white2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="28dp">

                <!-- Card Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp"
                    android:gravity="center_vertical">

                    <View
                        android:layout_width="4dp"
                        android:layout_height="28dp"
                        android:background="@color/primary_blue"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/smart_insights"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary2"
                        android:fontFamily="sans-serif-medium" />

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_insights"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:background="@drawable/ripple_background"
                    android:padding="16dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <!-- Bottom Spacing -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>