<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/lightGrey"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Input Container -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="28dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="16dp"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="@color/white2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="28dp">

                <!-- Header Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp"
                    android:gravity="center_vertical">

                    <View
                        android:layout_width="4dp"
                        android:layout_height="28dp"
                        android:background="@color/primary_blue"
                        android:layout_marginEnd="12dp" />

                    <LinearLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/circle_background"
                        android:backgroundTint="@color/primary_blue_light"
                        android:gravity="center"
                        android:layout_marginEnd="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ“§"
                            android:textSize="16sp"
                            android:gravity="center" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Employee Email"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary2"
                        android:fontFamily="sans-serif-medium" />

                </LinearLayout>

                <!-- Email Input Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/ripple_background"
                    android:padding="16dp">

                    <EditText
                        android:id="@+id/et_emp_email"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:hint="Enter employee email address"
                        android:textColorHint="@color/text_secondary2"
                        android:textColor="@color/text_primary2"
                        android:textSize="15sp"
                        android:fontFamily="sans-serif"
                        android:inputType="textEmailAddress"
                        android:background="@android:color/transparent"
                        android:paddingStart="16dp"
                        android:paddingEnd="48dp"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp" />

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Action Buttons Container -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="28dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="16dp"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="@color/white2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="28dp">

                <!-- Header Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp"
                    android:gravity="center_vertical">

                    <View
                        android:layout_width="4dp"
                        android:layout_height="28dp"
                        android:background="@color/primary_blue"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Actions"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary2"
                        android:fontFamily="sans-serif-medium" />

                </LinearLayout>

                <!-- Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Add Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_add_employee"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Add Employee"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/white2"
                        android:fontFamily="sans-serif-medium"
                        android:letterSpacing="0.05"
                        app:iconTint="@color/white2"
                        app:iconGravity="textStart"
                        app:backgroundTint="@color/success_color2"
                        app:cornerRadius="12dp"
                        android:elevation="4dp"
                        android:layout_marginBottom="12dp" />

                    <!-- Delete Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_delete_employee"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Delete Employee"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/white2"
                        android:fontFamily="sans-serif-medium"
                        android:letterSpacing="0.05"
                        app:iconTint="@color/white2"
                        app:iconGravity="textStart"
                        app:backgroundTint="@color/error_color"
                        app:cornerRadius="12dp"
                        android:elevation="4dp" />

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Employee List Container -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="8dp"
            app:cardCornerRadius="16dp"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="@color/white2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="28dp">

                <!-- Header Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp"
                    android:gravity="center_vertical">

                    <View
                        android:layout_width="4dp"
                        android:layout_height="28dp"
                        android:background="@color/primary_blue"
                        android:layout_marginEnd="12dp" />

                    <LinearLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/circle_background"
                        android:backgroundTint="@color/info_blue_light"
                        android:gravity="center"
                        android:layout_marginEnd="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ‘¥"
                            android:textSize="16sp"
                            android:gravity="center" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Employee Directory"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary2"
                        android:fontFamily="sans-serif-medium" />

                </LinearLayout>

                <!-- RecyclerView Container -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:background="@drawable/ripple_background"
                    android:padding="16dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_employee_list"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:clipToPadding="false"
                        android:fadeScrollbars="true"
                        android:overScrollMode="ifContentScrolls"
                        android:scrollbars="vertical" />

                </LinearLayout>

                <!-- Empty State -->
                <TextView
                    android:id="@+id/tv_empty_state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No employees found."
                    android:textSize="16sp"
                    android:textColor="@color/text_secondary2"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:visibility="gone"
                    android:paddingTop="20dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>