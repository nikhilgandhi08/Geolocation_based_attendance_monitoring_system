<?xml version="1.0" encoding="utf-8"?>
<!-- layout/item_leaderboard_employee.xml -->
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:strokeWidth="0dp"
    android:backgroundTint="@color/card_background_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Rank Badge -->
        <TextView
            android:id="@+id/tvRank"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="1"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/rank_badge_background"
            android:gravity="center"
            android:layout_marginEnd="16dp" />

        <!-- Employee Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvEmployeeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="John Doe"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary1"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvEmployeeEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="john.doe@company.com"
                android:textSize="12sp"
                android:textColor="@color/text_secondary" />

        </LinearLayout>

        <!-- Attendance Count -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end">

            <TextView
                android:id="@+id/tvAttendanceCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="28"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/success_color"
                android:layout_marginBottom="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="days present"
                android:textSize="11sp"
                android:textColor="@color/text_secondary" />

        </LinearLayout>

        <!-- Trophy Icon for Top 3 -->
        <ImageView
            android:id="@+id/ivTrophy"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_trophy"
            android:layout_marginStart="12dp"
            android:visibility="gone"
            app:tint="@color/warning_color" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>