<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="30dp" />
                    <gradient
                        android:startColor="#FFFF0040"
                        android:centerColor="#CCFF0066"
                        android:endColor="#FFFF0040"
                        android:angle="90" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="30dp" />
                    <stroke android:width="2dp" android:color="#FFFF0080" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="30dp" />
                    <gradient
                        android:startColor="#AA16213E"
                        android:centerColor="#CC0F0F23"
                        android:endColor="#AA16213E"
                        android:angle="90" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="30dp" />
                    <stroke android:width="1dp" android:color="#6600D4FF" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>